                        <i class="fas fa-user-plus"></i> {{ 'action.register.user'|trans }}
                    </a>
                </p>
            </div>
        </div> #}

        <div class="col-sm-6">
            <div class="portal_jumbotron">
                <p class="jumbotron_title">
                    {{ 'help.browse_admin'|trans|raw }}
                </p>
                <p class="jumbotron_link">
                    <a class="btn btn-primary btn-lg" href="{{ path('admin_index') }}">
