{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'title.homepage'|trans|raw }}</h1>
            <p class="copyright">
                    <i class="far fa-copyright"></i> 
                    {{ 'now'|date('Y') }}
                <a class="mail_link" href="mailto:pburger@hotmail.com">
                    {{'footer.author'|trans|raw}}
                </a>
            </p>  
    </div>

<div class="container">
    <div class="row">
                

        <div class="col-sm-6">
            <div class="portal_jumbotron">
                <p class="jumbotron_title">
                    {{ 'help.browse_app'|trans|raw }}
                </p>
                <p class="jumbotron_link">
                    <a class="btn btn-primary btn-lg" href="{{ path('portal_index') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i> {{ 'action.browse_app'|trans }}
                    </a>
                </p>
            </div>
        </div>

        {# <div class="col-sm-4">
