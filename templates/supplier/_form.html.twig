<div class="form_div">
    
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.name) }}
            {% include 'supplier/messages.html.twig' %}
            {% include 'supplier/notes.html.twig' %}
            {% include 'supplier/products.html.twig' %}
        </div>

        <div class="col-sm-6">                   
            {{ form_widget(form.contact) }} 
        </div>
    </div>
    {% if edit_state or fresh_state %}
    <div class="row">
        <div class="col-sm-12 form_button">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {% endif %}

    {{ form_end(form) }}
</div>
