<form class="delete_form" method="post" action="{{ path('broker_delete', {'id': broker.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ broker.id) }}">
    <button role="link" class="page_icon delete_link">
    <i style="border:none;" class="fas fa-trash page_icon"></i>
    </button>
</form>
