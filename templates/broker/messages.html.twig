<div class="row">
    <div class="col form_component">        
        <div class="row">
            <div class="col-sm-6">
                <div class="form_component_title">{{'form_component_messages_title'|trans|raw}}</div>
            </div>
            <div class="col-sm-6">
                <a class="form_component_link" href="{{ path('message_new',{'broker_id': broker.id}) }}" title="{{'form_component_newMessage'|trans|raw}}">
                <i class="fas fa-plus page_icon"></i>
                </a>
            </div>
        </div>

    {% if messages %}        
    <ul>
        {% for message in messages %}
            <li>{{message.text}}</li>
        {% endfor %}
    </ul>
    {% else %}
        <div class="form_component_no_records">{{'form_component_no_records'|trans|raw}}</div>
    {% endif %}
</div>
</div>