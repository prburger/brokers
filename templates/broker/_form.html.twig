<div class="form_div">    
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-6">
            {% do form.brokerSelection.setRendered() %}
            {% do form.customerSelection.setRendered() %}
            {% do form.supplierSelection.setRendered() %}
            {{ form_row(form.name) }}
            {% include 'broker/messages.html.twig' %} 
            {% include 'broker/notes.html.twig' %}
            {% include 'broker/suppliers.html.twig' %}
            {% include 'broker/customers.html.twig' %} 
        </div>

        <div class="col-sm-6">
        {{ form_row(form.contact) }}
        </div>
    </div>
    {% if edit_state or fresh_state %}
    <div class="row">
        <div class="col-sm-12 form_button">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {% endif %}

    {{ form_end(form) }}
</div>