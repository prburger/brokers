{% block body %}
    <h4>{{'dashboard.title.customers'|trans|raw}}</h4>

    <table class="table" style="font-family:Calibri;font-size:10pt;">
        <thead>
            <tr>
                <th>Name</th>
                <th>DateAdded</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.dateAdded ? customer.dateAdded|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 

    <a class="btn btn-primary" role="button" href="{{ path('customer_index') }}">Details</a>
{% endblock %}