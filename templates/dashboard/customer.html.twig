{% block body %}
<div class="row">
        <div class="col">
            <div class="dashboard_title">
                {{'dashboard.title.customers'|trans|raw}}  
            <a class="return_to_list_label" href="{{ path('customer_index') }}" title="Details"><i class="fas fa-file-alt page_icon"></i></a>
            </div>
        </div>
    </div>
    <table class="dashboard_table">
        <thead>
            <tr>
                <th>Name</th>
                <th>DateAdded</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.name }}</td>
                <td>{{ customer.dateAdded ? customer.dateAdded|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 

{% endblock %}