{% block body %}
    <div class="row">
        <div class="col">
            <div class="dashboard_title">
                {{'dashboard.title.brokers'|trans|raw}}  
            <a class="return_to_list_label" href="{{ path('broker_index') }}" title="Details"><i class="fas fa-file-alt page_icon"></i></a>
            </div>
        </div>
    </div>

        <table class="dashboard_table" >
            <thead>
                <tr>
                    <th>Name</th>
                    <th>DateAdded</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for broker in brokers %}
                <tr>
                    <td>{{ broker.name }}</td>
                    <td>{{ broker.dateAdded ? broker.dateAdded|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('broker_show', {'id': broker.id}) }}" title="View"><i class="far fa-eye" aria-hidden="true"></i></a>
                        <a href="{{ path('broker_edit', {'id': broker.id}) }}" title="Edit"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
   
{% endblock %}