{% block body %}

<div class="dashboard_title">
    {{'dashboard.title.brokers'|trans|raw}}  
    <a class="return_to_list_label" href="{{ path('broker_index_paginated', {'page':1}) }}" title="Details"><i class="fas fa-file-alt page_icon"></i></a>
</div>

    <div class="dashboard_table">
        <table class="table" >
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
             {% for broker in brokers %} 
            
                <tr>
                    <td>{{ broker.name }}</td>
                    <td class="return_to_list_label">
                        <a href="{{ path('broker_show', {'id': broker.id}) }}" title="View"><i class="far fa-eye dashboard_icon"></i></a>
                        <a href="{{ path('broker_edit', {'id': broker.id}) }}" title="Edit"><i class="fa fa-edit dashboard_icon"></i></a>
                    </td>
                </tr>
            {% else %}
                {%include 'no_records_found.php' %}
            {% endfor %}
            </tbody>
        </table>
</div>
{% endblock %}